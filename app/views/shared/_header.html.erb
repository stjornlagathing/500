<div id="header" style="float:right">
  <% if logged_in? %>
    <p><strong>Hæ <%= current_user.name %>!</strong> | <%= link_to "logout", logout_path, :class=>"btn btnLogout" %></p>
    <p>
      <%= link_to "Já: #{current_user.aye.size}", aye_candidates_path %> | 
      <%= link_to "Kannski: #{current_user.maybe.size}", maybe_candidates_path %> | 
      <%= link_to "Nei: #{current_user.nay.size}", nay_candidates_path %>
    </p>
    <p>Þú hefur merkt við <%= current_user.reviewed_percentage %>% frambjóðenda</p>
    <div style="text-align: right;">
      <%= link_to "Discover a new candidate >>", next_candidates_path, :class=>"btn", :id => "jump_to_next_candidate" %>
    </div>
    <br/>
    <em style="color:#bfbfbf">(Shorcuts 0:next | 1:aye | 2:maybe | 3:nay)</em>
  <% else %>
    <% token = RAILS_ENV == "development" ? "http%3A%2F%2F0.0.0.0%3A3000%2Frpx": "http%3A%2F%2Fwww.frambjodendur.is%2Frpx" %>
    <a class="rpxnow" onclick="return false;" href="https://frambjodendur.rpxnow.com/openid/v2/signin?token_url=<%= token %>">
      login 
    </a>
  <% end %>
</div>
